<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.teiid.dashboard</groupId>
        <artifactId>teiid-dashboard</artifactId>
        <version>2.1.0.SNAPSHOT</version>
    </parent>

    <artifactId>teiid-dashboard-modules</artifactId>
    <packaging>pom</packaging>
    <name>Teiid Dashboard Builder Modules</name>

    <modules>
        <!--module>teiid-integration</module-->
        <module>teiid-showcase</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <!--
                         global configuration to achieve that web module compiled classes and resources
                         will be archived in a .jar in the config.WEB-INF/lib directory instead of the
                         config.WEB-INF/classes
                    -->
                    <archiveClasses>true</archiveClasses>
                    <classesClassifier>classes</classesClassifier>
                    <attachClasses>true</attachClasses>
                    <packagingExcludes>WEB-INF/lib/*-classes.jar</packagingExcludes>

                </configuration>
            </plugin>
        </plugins>
    </build>

</project>