<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">


<Configure id="dashbuilder" class="org.eclipse.jetty.webapp.WebAppContext">

    <Set name="contextPath">/dashboard</Set>

    <Get name="securityHandler">
        <Set name="loginService">
            <New class="org.eclipse.jetty.security.HashLoginService">
                <Set name="name">teiid dashboard realm</Set>
                <Set name="config">./realm.properties</Set>
            </New>
        </Set>
    </Get>

    <New id="BeanManager" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>
            <Ref id="dashbuilder"/>
        </Arg>
        <Arg>BeanManager</Arg>
        <Arg>
            <New class="javax.naming.Reference">
                <Arg>javax.enterprise.inject.spi.BeanManager</Arg>
                <Arg>org.jboss.weld.resources.ManagerObjectFactory</Arg>
               <Arg/>
            </New>
        </Arg>
    </New>

    <New id="KieContributorsDataSource" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>
            <Ref id="dashbuilder"/>
        </Arg>
        <Arg>jdbc/dashbuilder</Arg>
        <Arg>
            <New class="org.jboss.dashboard.database.NonPooledDataSource">
                <Set name="url">jdbc:h2:./db/dashbuilder</Set>
                <Set name="user">dashbuilder</Set>
                <Set name="password">dashbuilder</Set>
                <Set name="driver">org.h2.Driver</Set>
                <Set name="isolation">2</Set>
            </New>

        </Arg>
    </New>

</Configure>